<!doctype html>
<html>

<head>
  <title>Resilient Roulette</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span> Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %>
          </p>

          <a href="/unlink/local" class="btn btn-default">Unlink</a>
          <% } else { %>
          <a href="/connect/local" class="btn btn-default">Connect Local</a>
          <% } %>

        </div>
      </div>
      <div class="col-sm-6">
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i<documents.length; i++) {%>
          <li class="message" data-docId='<%= documents[i]._id %>'>
            <span><%= documents[i].winner %></span>
            <span><%= documents[i].loser %></span>
            <span><%= documents[i].betAmount %></span>

            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
        </ul>

        <h2>Add a message</h2>
        <% if (user.local.email) { %>
        <form action="/profits" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="message" name="msg">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

    </div>

    <section class="secResultsProfits">
      <h2>NET PROFITS</h2>
      <span class="spanNetProfit"><%= addProfits[0].total %></span>
      <h2>PROFITS</h2>
      <span class="spanNetProfit"><%= addProfits[0].total - subtractProfits %></span>
      <h2>LOSSES</h2>
      <span class="spanProfit"><%= Math.abs(subtractProfits) %></span>

    </section>

    <section class="secResultsPlayerStats">
      <h2>Player Wins</h2>
      <span class="spanPlayerWins"><%= winnerCasino %></span>
      <h2>House Wins</h2>
      <span class="spanHouseWins"><%= playerCasino %></span>

    </section>

    <script src="main.js"></script>

</body>

</html>
